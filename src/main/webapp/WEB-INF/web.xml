<web-app>
    <!-- Configuração do Filtro JWT -->
    <filter>
        <filter-name>jwtTokenFilter</filter-name>
        <filter-class>com.gutosoethe.security.JwtTokenFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>jwtTokenFilter</filter-name>
        <url-pattern>/api/auth/secure/</url-pattern>
    </filter-mapping>

    <!-- Configuração de Restrições de Papéis -->
    <security-role>
        <role-name>ADMIN</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Resources</web-resource-name>
            <url-pattern>/api/auth/secure/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
